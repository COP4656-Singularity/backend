{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1",
        "title": "Singularity 2-Do List"
    },
    "paths": {
        "/task": {
            "get": {
                "description": "Gets `Task` objects.\nOptional query param of **size** determines\nsize of returned array\n",
                "parameters": [
                    {
                        "name": "size",
                        "in": "query",
                        "description": "Size of array",
                        "required": true,
                        "type": "number",
                        "format": "double"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfTasks",
                            "type": "array",
                            "items": {
                                "title": "Task",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "single": {
                                        "type": "boolean"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}